<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
    <body>
        <% include templates/menu.ejs %>
        <div class="container" style="max-width: 50vh;">
            <h2 class="page-header" style="margin-top:0vh;border-bottom: 0px solid #166fff;margin-bottom:1px"><center>Вход</center></h2>
            <form method="post" action="/login">
               <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="Email" name="email">
              </div>
              <div class="form-group">
                <label>Парола</label>
                <input type="password" class="form-control" placeholder="Парола" name="password">
              </div>
                <%if(warn) { %>
                    <div class="alert alert-danger" style="margin-top:6px;opacity:1;"><center><%=warn%></center></div>
                <% } %>
              <center>
                  <button type="submit" class="btn btn-default" style="height: 6vh;width:21vh;background-color:#2d64fc;color:white;"><center>Регистрирай се</center></button>
            </center>
            </form>
        </div>
    </body>
</html>